	public List getAllPersonNames() {
		return ladpTemplate.search("", "(objectclass=person)",
		    new AttributesMapper(){
			    public Object mapFromAttributes(Attributes attrs){
			    	return attrs.get("cn").get();
			    }
		    }
		
	}
	

	

}
